<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="radius" format="dimension" />
    <attr name="topLeftRadius" format="dimension" />
    <attr name="topRightRadius" format="dimension" />
    <attr name="bottomLeftRadius" format="dimension" />
    <attr name="bottomRightRadius" format="dimension" />
    <declare-styleable name="CustomView">
        <attr name="matchHeightToWidth" format="boolean" />
        <attr name="matchWidthToHeight" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CornerRoundImageStyle">
        <attr name="roundTopLeft" format="dimension" />
        <attr name="roundTopRight" format="dimension" />
        <attr name="roundBottomLeft" format="dimension" />
        <attr name="roundBottomRight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BaseHorizontalLayout">
        <attr name="horizontalTitle" format="reference|string" />
        <!--<attr name="isBottomLayout" format="reference|boolean" />-->
        <attr name="moreButtonText" format="reference|string" />
    </declare-styleable>
    <declare-styleable name="OutLineTextView">

        <attr name ="textStrokeWidth" format ="float"/>
        <attr name ="textStrokeColor" format ="color"/>
    </declare-styleable>
    <declare-styleable name="CodiaRoundImageView">
        <attr name="radius" />
        <attr name="topLeftRadius" />
        <attr name="topRightRadius" />
        <attr name="bottomLeftRadius" />
        <attr name="bottomRightRadius" />
    </declare-styleable>

    <declare-styleable name="CodiaRoundFlexboxLayout">
        <attr name="radius" />
        <attr name="topLeftRadius" />
        <attr name="topRightRadius" />
        <attr name="bottomLeftRadius" />
        <attr name="bottomRightRadius" />
    </declare-styleable>

    <declare-styleable name="CodiaRoundFrameLayout">
        <attr name="widthHeightRadio" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="topLeftRadius" />
        <attr name="topRightRadius" />
        <attr name="bottomRightRadius" />
        <attr name="bottomLeftRadius" />
    </declare-styleable>
</resources>