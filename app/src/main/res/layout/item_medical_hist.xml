<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/container_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|top"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/container_list_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:paddingTop="16dp">

                <LinearLayout
                    android:id="@+id/container_leading_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|top"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/container_avatar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/use_mode_container_avatar"
                        android:clipToPadding="false"
                        android:gravity="left|center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_initial_avatar"
                            android:layout_width="40dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="-2.5dp"
                            android:layout_marginBottom="-2.5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:lineHeight="24dp"
                            android:maxLines="2"
                            android:text="H"
                            android:textColor="#FF292927"
                            android:textSize="16dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:gravity="left|top"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/medical_hist_title"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:gravity="left|center_vertical"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="피부 미용 얼굴"
                        android:textColor="#FF292927"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/medical_hist_date"
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:alpha="0.75"
                        android:gravity="left|center_vertical"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="2024.07.00"
                        android:textColor="#FF52524D"
                        android:textSize="14dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/image_trailing_item"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/use_mode_image_trailing_item" />
            </LinearLayout>

            <ImageView
                android:id="@+id/image_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/use_mode_image_divider" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>