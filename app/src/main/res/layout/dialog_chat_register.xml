<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dialog_rect_top_white"
                    android:layout_marginStart="@dimen/dialog_box_left_margin"
                    android:layout_marginEnd="@dimen/dialog_box_right_margin"
                    android:padding="@dimen/dialog_content_padding_large"
                    android:orientation="vertical"
                    android:gravity="center_vertical|start"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|start"
                        android:text="채팅이름"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dialog_txt_size_big"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_chat_title"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/input_box"
                        android:gravity="center_vertical|start"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/light_gray_text"
                        android:textSize="21sp"
                        android:hint="채팅이름 입력"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:focusable="true"
                        android:text="test"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center_horizontal|start"
                        android:text="발신자 번호"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dialog_txt_size_big"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_sender_number"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/input_box"
                        android:gravity="center_vertical|start"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/light_gray_text"
                        android:textSize="21sp"
                        android:hint="발신자번호 입력"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:focusable="true"
                        android:text="5"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center_horizontal|start"
                        android:text="수신자 번호"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dialog_txt_size_big"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_receiver_number"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/input_box"
                        android:gravity="center_vertical|start"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/light_gray_text"
                        android:textSize="21sp"
                        android:hint="수신자번호 입력"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:focusable="true"
                        android:text="6"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center_horizontal|start"
                        android:text="수신자 주소"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dialog_txt_size_big"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_receiver_address"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/input_box"
                        android:gravity="center_vertical|start"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/light_gray_text"
                        android:textSize="21sp"
                        android:hint="수신자주소 입력"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:focusable="true"
                        android:text="1234@172.30.1.19"
                        />

                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_rect_bottom_white"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dialog_content_padding_large"
                    android:paddingStart="@dimen/dialog_content_padding_large"
                    android:paddingEnd="@dimen/dialog_content_padding_large"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/text_cancel"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_cancel"
                            android:gravity="center"
                            android:text="취소"
                            android:textColor="@android:color/white"
                            android:textSize="21sp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_marginStart="10dp"
                            android:id="@+id/text_register"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_default"
                            android:gravity="center"
                            android:text="생성"
                            android:textColor="@android:color/white"
                            android:textSize="21sp"
                            android:textStyle="bold"
                            />

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</layout>