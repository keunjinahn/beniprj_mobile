<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_active"/>
            <corners
                android:bottomRightRadius="@dimen/dialog_bottom_btn_radius"
                android:topRightRadius="@dimen/dialog_bottom_btn_radius"
                />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" />
            <corners
                android:bottomRightRadius="@dimen/dialog_bottom_btn_radius"
                android:topRightRadius="@dimen/dialog_bottom_btn_radius"
                />
        </shape>
    </item>
</selector>